{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build PCM5122 Component (Local)",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/esphome",
      "args": [
        "compile",
        "components/pcm5122/yaml/idf-media-player.yaml"
      ],
      "env": {
        "PLATFORMIO_CORE_DIR": "${workspaceFolder}/.platformio"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Run PCM5122 Component (Local - esphome run)",
      "type": "shell",
      "command": "bash",
      "args": [
        "${workspaceFolder}/.vscode/esphome-run.sh"
      ],
      "env": {
        "PLATFORMIO_CORE_DIR": "${workspaceFolder}/.platformio"
      },
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Upload to Device (Local)",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/esphome",
      "args": [
        "upload",
        "components/pcm5122/yaml/idf-media-player.yaml",
        "--device",
        "/dev/tty.usbserial-130"
      ],
      "env": {
        "PLATFORMIO_CORE_DIR": "${workspaceFolder}/.platformio"
      },
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Build PCM5122 Component (Docker)",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-it",
        "-v",
        "${workspaceFolder}:${workspaceFolder}",
        "-v",
        "${workspaceFolder}/.platformio:/config/.esphome/platformio",
        "-w",
        "${workspaceFolder}",
        "ghcr.io/esphome/esphome",
        "compile",
        "components/pcm5122/yaml/idf-media-player.yaml"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
